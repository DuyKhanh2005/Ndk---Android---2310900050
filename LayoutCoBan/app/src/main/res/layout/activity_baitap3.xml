<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BaiTap3"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ô 1 (vàng, trên trái) -->
    <TextView
        android:id="@+id/box1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#FFEB3B"
        android:text="1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toStartOf="@id/box5"
        app:layout_constraintBottom_toTopOf="@id/box3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.3" />

    <!-- Ô 2 (tím, trên phải) -->
    <TextView
        android:id="@+id/box2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#673AB7"
        android:text="2"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toEndOf="@id/box5"
        app:layout_constraintBottom_toTopOf="@id/box4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.3" />

    <!-- Ô 3 (xanh lá, dưới trái) -->
    <TextView
        android:id="@+id/box3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#8BC34A"
        android:text="3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/box1"
        app:layout_constraintEnd_toStartOf="@id/box5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.7" />

    <!-- Ô 4 (đỏ, dưới phải) -->
    <TextView
        android:id="@+id/box4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#F44336"
        android:text="4"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/box2"
        app:layout_constraintStart_toEndOf="@id/box5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.7" />

    <!-- Ô 5 (cam, ở giữa) -->
    <TextView
        android:id="@+id/box5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#FF9800"
        android:text="5"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
