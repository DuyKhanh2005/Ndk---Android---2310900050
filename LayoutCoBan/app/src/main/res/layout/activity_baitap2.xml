<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Thanh tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab3_PS23456"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="8dp"/>

    <!-- Ô 2 (màu cam, nằm trên cùng bên trái) -->
    <TextView
        android:id="@+id/box2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/tvTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="#FF5722"
        android:gravity="center"
        android:text="2"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Ô 4 (màu xanh, dưới ô 2) -->
    <TextView
        android:id="@+id/box4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/box2"
        android:layout_alignStart="@id/box2"
        android:layout_marginTop="16dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:text="4"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Ô 3 (màu vàng, bên phải ô 4, sát phải màn hình) -->
    <TextView
        android:id="@+id/box3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@id/box4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="#FFC107"
        android:gravity="center"
        android:text="3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Ô 1 (màu cam, dưới ô 3, sát phải màn hình) -->
    <TextView
        android:id="@+id/box1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/box3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="#FF5722"
        android:gravity="center"
        android:text="1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

</RelativeLayout>
